

    <div class="container">

      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
        <h1>Your Boards</h1>
        <p>Click the name of the board.</p>
        <p>Creator of the board: <%=current_user.email%> </p>
        </p>
      </div>

    </div> <!-- /container -->

<div class="private-class">
<% boardnumber=0%>
<br><h2>Private</h2></br>
<% @boards_private.each do |board| %>
	<%boardnumber+=1%>
	<h4><%=board.name%></h4>
		<%=link_to 'Show', user_board_path(current_user,board.id) %>
		<%=link_to 'Edit', edit_user_board_path(current_user, board.id)%>
		<%=link_to 'Delete', user_board_path(current_user,board.id), method: :delete, data: {confirm:"Do you really want to delete Board?"} %> </br>
	<%end%>

<br>Number of the private boards: <%=boardnumber%> </br>
</div>
======================================================================================================================================================
<div class="public-class">
<% public_board_number=0%>
<br><h2>Public</h2></br>
	<div class="each-public-class">
<% @boards_public.each do |board| %>
	<%public_board_number+=1%>
	<h6>[Creator: <%=@users.find(board.user_id).email%>]</h6>
	<h4><strong><%=board.name%><strong></h4>
	<%=link_to 'Show', user_board_path(current_user,board.id) %>
	<%if @users.find(board.user_id)==current_user%>
		<%=link_to 'Edit', edit_user_board_path(current_user, board.id)%>
		<%=link_to 'Delete', user_board_path(current_user,board.id), method: :delete, data: {confirm:"Do you really want to delete Board?"} %> </br>
	<%end%>
	

<%end%>
</div>
<br>Number of the public boards: <%=public_board_number%> </br>
</div>
======================================================================================================================================================

<div class="rest body">
<br>Total Number of the boards: <%=public_board_number+boardnumber%> </br>
<br><%=link_to 'Create a new Board', new_user_board_path(current_user)%></br>
</div>


